# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-change-this-in-production-with-a-real-secret-key

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1


# =============================================================================
# DATABASE SETTINGS
# =============================================================================

DB_ENGINE=django.db.backends.postgresql
DB_NAME=django_app
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
DB_CONN_MAX_AGE=600


# =============================================================================
# JWT SETTINGS
# =============================================================================

# Access token lifetime in minutes (default: 60 minutes = 1 hour)
JWT_ACCESS_TOKEN_LIFETIME=60

# Refresh token lifetime in days (default: 7 days)
JWT_REFRESH_TOKEN_LIFETIME=7


# =============================================================================
# CORS SETTINGS
# =============================================================================

# Comma-separated list of allowed origins for CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080


# =============================================================================
# EMAIL SETTINGS
# =============================================================================

# Email backend
# Development: django.core.mail.backends.console.EmailBackend
# Production: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Configuration (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourproject.com


# =============================================================================
# REDIS / CACHE SETTINGS (Optional)
# =============================================================================

# Set to True to use Redis cache, False to use local memory cache
USE_REDIS=False

# Redis URL (only needed if USE_REDIS=True)
REDIS_URL=redis://127.0.0.1:6379/1


# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
DJANGO_LOG_LEVEL=INFO


# =============================================================================
# SECURITY SETTINGS (Production only)
# =============================================================================

# Force HTTPS redirect in production
SECURE_SSL_REDIRECT=True


# =============================================================================
# STATIC & MEDIA FILES
# =============================================================================

# These are typically handled by Django settings, but can be overridden if needed
# STATIC_URL=/static/
# MEDIA_URL=/media/


# =============================================================================
# THIRD-PARTY SERVICES (Add as needed)
# =============================================================================

# AWS S3 Settings (if using S3 for media files)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Stripe Settings (if using payment processing)
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# Sentry Settings (if using error tracking)
# SENTRY_DSN=https://...@sentry.io/...

# Google OAuth (if using social authentication)
# GOOGLE_CLIENT_ID=your-client-id
# GOOGLE_CLIENT_SECRET=your-client-secret

# Facebook OAuth (if using social authentication)
# FACEBOOK_APP_ID=your-app-id
# FACEBOOK_APP_SECRET=your-app-secret


# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Django Debug Toolbar (set to True to enable in development)
# ENABLE_DEBUG_TOOLBAR=False


# =============================================================================
# CUSTOM APPLICATION SETTINGS
# =============================================================================

# Add your custom environment variables below
# CUSTOM_SETTING=value


# =============================================================================
# HOSTMAIL SAAS CONFIGURATION
# =============================================================================

# MinIO Storage Settings
USE_MINIO=True
MINIO_ENDPOINT=https://minio.f2mb.xyz
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET_NAME=hostmail
MINIO_REGION=us-east-1
MINIO_USE_SSL=True
MINIO_VERIFY_SSL=True
MINIO_CUSTOM_DOMAIN=

# PayPal Settings
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_CONTACT_SUBMIT=10/m
RATELIMIT_PROJECT_VIEW=100/m
RATELIMIT_API_DEFAULT=60/m

# Database SSL Mode (for Neon PostgreSQL)
DB_SSLMODE=require